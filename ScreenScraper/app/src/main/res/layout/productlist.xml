<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:weightSum="10">


        <ImageView
            android:id="@+id/imageViewProductImage"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingRight="@dimen/productlist_image_padding_right"
            android:paddingLeft="@dimen/productlist_image_padding_left"
            android:layout_weight="2"/>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="8"
            android:weightSum="2">

            <TextView android:id="@+id/textViewProductName"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:maxLines="1"
                android:textSize="16dip"
                android:textStyle="bold"
                android:layout_weight="1"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2">

                <TextView android:id="@+id/textViewProductCost"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:maxLines="1"
                    android:textSize="16dip"
                    android:paddingRight="@dimen/listview_padding_right"
                    />

                <TextView android:id="@+id/textViewProductMeasureCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="16dip"
                    />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>